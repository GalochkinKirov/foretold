{
  "name": "foretold",
  "scripts": {
    "postdeploy":"npm run client/build"
  },
  "env": {
    "AUTH0_SECRET": {
      "required": true
    },
    "SLACK_WEBHOOK_URL": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-18"
}
